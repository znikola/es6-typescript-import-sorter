{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017", "es2015", "dom", "es6"],
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src",
    "paths": {
      "import-sorter": ["lib/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
